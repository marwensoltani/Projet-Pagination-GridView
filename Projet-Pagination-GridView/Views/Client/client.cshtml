@{
    ViewData["Title"] = "Pages Clients";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @using X.PagedList.Mvc.Core;
    @using X.PagedList;
    @using X.PagedList.Mvc.Core.Common;
    @model ClientsPage

}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>

<h1>Liste des clients</h1>
<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>id</th>
                <th>designation</th>
                <th>solde</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var cl in Model.clients)
            {
            <tr>
                <td>@cl.id</td>
                <td>@cl.designation</td>
                <td>@cl.solde</td>
            </tr>
            }
            <tr>
                <td colspan="3">
                    <!-- Nombre de (numéro de pages) à afficher à la fois est 5 pages au max-->
                    <!-- le nom du paramètre passé dans l'url est "page"-->
                    @Html.PagedListPager((IPagedList)Model.clients, page => Url.Action("Client",new { numeroPage = page }),PagedListRenderOptions.OnlyShowFivePagesAtATime)
                </td>
            </tr>
        </tbody>
    </table>
</div>
